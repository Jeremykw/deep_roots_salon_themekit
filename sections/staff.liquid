
{% if section.settings.staff_heading.size > 0 %}
	<div class="section-header text-center">
		<h1>{{ section.settings.staff_heading }}</h1>
	</div>
{% endif %}

<div class="staff_grid">
  {% for block in section.blocks %}
    <div class="staff">
      <div class="staff_pic">{{ block.settings.staff_image | img_url: '200x' | img_tag }}</div>
      <div class="staff_title"><h1>{{ block.settings.title }}</h1></div>
      <div class="staff_title"><h2>{{ block.settings.role }}</h2></div>
      <div class="staff_desc"><p>{{ block.settings.staff_description }}</p></div> 
    </div>
  {% endfor %}
</div>



{% schema %}
{
	"name": "Staff",
	"settings": [{
		"id": "staff_heading",
		"type": "text",
		"label": "Heading for Staff Sections"
	}],
	"blocks": [{
		"type": "staff",
		"name": "Staff",
		"settings": [{
				"id": "staff_image",
				"type": "image_picker",
				"label": "Picture"
			},
			{
				"id": "title",
				"type": "text",
				"label": "Name"
			},
			{ 
				"id": "role", 
				"type": "text", 
				"label": "Title" 
			},
			{
				"id": "staff_description",
				"type": "textarea",
				"label": "Description"
			}
		]
	}]
}
{% endschema %}