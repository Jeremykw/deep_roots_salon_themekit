{% if section.settings.regulation_heading.size > 0 %}
	<div class="section-header text-center">
		<h2>{{ section.settings.regulation_heading }}</h2>
	</div>
{% endif %}

<div class="rules_grid">
  {% for block in section.blocks %}
    <div class="rules">
      {% if block.settings.title.size > 0 %}
        <div class="rule_name">
          <h2>{{ block.settings.title }}</h2>
        </div>
      {% endif %}

      <div class="appointment_info">
        <p>{{ block.settings.appointment_info }}</p>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %} 
{ 
  "name": "Appointment Info", 

    "blocks": [
      { 
        "type": "appointments", 
        "name": "Appointment Info", 
        "settings": 
        [ 
          { 
            "id": "title", 
            "type": "text", 
            "label": "Title" 
          },
          { 
            "id": "appointment_info", 
            "type": "richtext", 
            "label": "Appointment Details" 
} ] }] } 
{% endschema %}
