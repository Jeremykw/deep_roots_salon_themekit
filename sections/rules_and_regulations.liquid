{% if section.settings.regulation_heading.size > 0 %}
	<div class="section-header text-center">
		<h2>{{ section.settings.regulation_heading }}</h2>
	</div>
{% endif %}

<div class="rules_grid">
  {% for block in section.blocks %}
    <div class="rules">
      {% if block.settings.rule_name.size > 0 %}
        <div class="rule_name">
          <h2>{{ block.settings.rule_name }}</h2>
        </div>
      {% endif %}

      <div class="rule_desc">
        <p>{{ block.settings.rule_desc }}</p>
      </div>
    </div>
  {% endfor %}
</div>


{% schema %} 
{ 
  "name": "Rules and Regulations", 
  "settings": [
      { 
        "id": "regulation_heading", 
        "type": "text", 
        "label": "Heading for Rules and Regulations Section" 
      }
    ], 
    "blocks": [
      { 
        "type": "regulations", 
        "name": "Regulations", 
        "settings": 
        [ 
          { 
            "id": "rule_name", 
            "type": "text", 
            "label": "Rule Name" 
          }, 
          { 
            "id": "rule_desc", 
            "type": "richtext", 
            "label": "Rule Description" 
} ] }] } 
{% endschema %}
